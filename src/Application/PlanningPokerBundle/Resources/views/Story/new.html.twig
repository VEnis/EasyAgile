{% extends "::base.html.twig" %}

{% block body %}
<h3>New Story in session "{{ session.title }}"</h3>

<form action="{{ path('poker_session_story_create', { 'session_id': session.id }) }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit" class="btn btn-primary">Create new Story</button> or
        <a href="{{ path('poker_session_show', { 'id': session.id }) }}" class="btn">
            Cancel and back to the session
        </a>
    </p>
</form>
{% endblock %}
