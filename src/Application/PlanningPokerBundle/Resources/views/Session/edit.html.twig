{% extends "::base.html.twig" %}

{% block body %}
<h1>Rename Session</h1>

<form action="{{ path('poker_session_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary">Save</button> or
        <a class="btn" href="{{ path('poker_session_show', { 'id': entity.id }) }}">Cancel and back to the session</a> or
        <a class="btn" href="{{ path('poker_session') }}">Cancel and back to the sessions list</a>
    </p>
</form>
{% endblock %}
