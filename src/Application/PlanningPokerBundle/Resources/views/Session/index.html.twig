{% extends "::base.html.twig" %}

{% block body %}
<h3>My sessions</h3>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.title }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.completed %}
                    <p class="text-info">Session is completed</p>
                {% else %}
                    <p class="text-warning">Session is not completed</p>
                {% endif %}
            </td>
            <td>
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a class="btn btn-info" href="{{ path('poker_session_show', { 'id': entity.id }) }}">Go to session</a>
                    </div>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('poker_session_new') }}">
    Create a new session
</a>
{% endblock %}
