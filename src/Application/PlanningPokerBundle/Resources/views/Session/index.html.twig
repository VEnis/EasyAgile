{% extends "::base.html.twig" %}

{% block body %}
<h1>Session list</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created_at</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('poker_session_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.completed %}<span class="icon-ok"></span>{% else %} {% endif %}</td>
            <td>
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a class="btn" href="{{ path('poker_session_show', { 'id': entity.id }) }}">show</a>
                        <a class="btn" href="{{ path('poker_session_edit', { 'id': entity.id }) }}">edit</a>
                    </div>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('poker_session_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}