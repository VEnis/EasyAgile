<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}EasyAgile{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets 'bootstrap/css/bootstrap.css' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block fullbody %}
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <a class="brand" href="{{ path('application_site_site_index') }}">EasyAgile</a>
                        <div class="nav-collapse collapse">
                            <ul class="nav">
                                <li class="active"><a href="{{ path('application_site_site_index') }}">Home</a></li>
                                <li><a href="{{ path('application_site_site_about') }}">About</a></li>
                            </ul>
                            <ul class="nav pull-right">
                                <li><a href="{{ path('fos_user_registration_register') }}">Sign Up Now</a></li>
                                <li class="divider-vertical"></li>
                                <li><a href="{{ path('fos_user_security_login') }}">Sign In</a></li>
                            </ul>

                        </div><!--/.nav-collapse -->
                    </div>
                </div>
            </div>

            <div class="container">
                {% block body %}
                {% endblock %}
                <hr>
                <footer>
                    <p>&copy; VEnis 2012</p>
                </footer>
            </div>
        {% endblock %}
        {% block javascripts %}
            {% javascripts
            'js/jquery-1.8.3.js'
            'bootstrap/js/bootstrap.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
