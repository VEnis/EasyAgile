{% extends "::base.html.twig" %}

{% block body %}
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

    </style>

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        {% if error %}
            <div class="alert alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="input-block-level" placeholder="Login" />
        <input type="password" id="password" name="_password" required="required"  class="input-block-level" placeholder="Password" />

        <label class="checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Remember me
        </label>
        <button class="btn btn-large btn-primary" type="submit" id="_submit" name="_submit">Sign in</button>
    </form>
{% endblock %}
